{
  "name": "intergram",
  "version": "0.0.1",
  "description": "A live chat widget linked to your telegram messenger",
  "engines": {
    "node": "24.x"
  },
  "scripts": {
    "start": "node server.js",
    "postinstall": "npm run build",
    "dev": "concurrently \"webpack serve --config webpack.config.js\" \"node devServer.js\"",
    "build": "mkdir -p dist && cp *.html dist && cp -r media dist && cp -r css dist && webpack --mode production",
    "lint": "eslint src",
    "test": "npm run lint"
  },
  "author": "Ido Cohen (http://github.com/idoco)",
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/eslint-parser": "^7.22.5",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-react": "^7.22.5",
    "babel-loader": "^9.1.3",
    "eslint": "^8.45.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "concurrently": "^8.2.0"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dateformat": "^5.0.3",
    "express": "^4.18.2",
    "preact": "^10.13.2",
    "request": "^2.88.2",
    "shx": "^0.3.3",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "store": "^2.0.12"
  }
}
